{
  "manifest_version": 2,
  "name": "MeowCad Solver",
  "description": "Extension allowing you to pass even the hardest MeowCad quizzes",
  "version": "0.0.1",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "webRequest",
    "https://netacad.com/*",
    "https://www.netacad.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://netacad.com/*",
        "https://www.netacad.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
